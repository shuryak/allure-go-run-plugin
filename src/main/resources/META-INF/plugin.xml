<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.shuryak.alluregorunplugin</id>
    <name>Allure Go Run</name>
    <vendor>shuryak</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.go</depends>

    <extensions defaultExtensionNs="com.intellij">
        <runLineMarkerContributor
                language="go"
                implementationClass="com.github.shuryak.alluregorunplugin.AllureGoRunLineMarkerContributor"
        />
        <runConfigurationProducer
                implementation="com.github.shuryak.alluregorunplugin.AllureGoRunConfigurationProducer"
        />
        <configurationType
                implementation="com.github.shuryak.alluregorunplugin.AllureGoTestConfigurationType"
        />
    </extensions>
</idea-plugin>
